{
	"name": "vite+vue3 Template",
	"version": "1.1.0",
	"author": {
		"name": "小斯斯",
		"email": "1531733886@qq.com",
		"url": "https://github.com/anncwb"
	},
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"staging": "vite build --mode staging",
		"serve": "vite preview",
		"test:gzip": "http-server dist --cors --gzip -c-1",
		"test:br": "http-server dist --cors --brotli -c-1",
		"lint:eslint": "eslint \"{src,mock}/**/*.{vue,ts,js}\" --fix",
		"lint:prettier": "prettier --write --loglevel warn \"src/**/*.{js,json,css,scss,vue,html,md}\"",
		"lint:stylelint": "stylelint --fix \"**/*.{vue,less,postcss,css,scss}\" --cache --cache-location node_modules/.cache/stylelint/",
		"lint:lint-staged": "lint-staged -c ./.husky/lintstagedrc.js",
		"lint:pretty": "pretty-quick --staged",
		"lint:staged": "lint-staged",
		"prepare": "husky install",
		"push": "scp -r dist/* root@服务器公网IP:/服务器资源存放地址",
		"build:push": "npm run build && npm run push"
	},
	"dependencies": {
		"@element-plus/icons": "^0.0.11",
		"axios": "^0.24.0",
		"element-plus": "^1.2.0-beta.3",
		"es6-promise": "^4.2.8",
		"lodash-es": "^4.17.21",
		"mockjs": "^1.1.0",
		"pinia": "^2.0.0-rc.10",
		"vue": "^3.2.22",
		"vue-i18n": "^9.1.9",
		"vue-router": "^4.0.12",
		"vuex": "^4.0.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-conventional": "^12.1.4",
		"@ehutch79/vite-eslint": "^0.0.1",
		"@types/core-js": "^2.5.5",
		"@types/lodash-es": "^4.17.5",
		"@types/node": "^16.10.3",
		"@typescript-eslint/eslint-plugin": "^4.26.1",
		"@typescript-eslint/parser": "^4.26.1",
		"@vitejs/plugin-vue": "^1.2.3",
		"@vue/compiler-sfc": "^3.2.22",
		"@zougt/vite-plugin-theme-preprocessor": "^1.0.0",
		"babel-eslint": "^10.1.0",
		"commitizen": "^4.2.4",
		"cz-conventional-changelog": "^3.2.0",
		"eslint": "^7.28.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-config-standard": "^16.0.3",
		"eslint-plugin-import": "^2.23.4",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-promise": "^5.1.0",
		"eslint-plugin-vue": "^7.18.0",
		"http-server": "^0.12.3",
		"husky": "^6.0.0",
		"lint-staged": "^11.0.0",
		"prettier": "2.3.1",
		"pretty-quick": "^3.1.1",
		"sass": "^1.34.0",
		"stylelint": "^13.13.1",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-config-recess-order": "^2.4.0",
		"stylelint-config-standard": "^22.0.0",
		"stylelint-order": "^4.1.0",
		"stylelint-scss": "^3.19.0",
		"typescript": "^4.4.3",
		"vite": "^2.3.5",
		"vite-plugin-compression": "^0.2.5",
		"vite-plugin-linter": "^1.0.2",
		"vite-plugin-mock": "^2.9.6",
		"vite-plugin-style-import": "^0.10.1",
		"vite-plugin-svg-icons": "^0.7.0",
		"vue-tsc": "^0.3.0"
	},
	"license": "MIT",
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"lint-staged": {
		"*.vue": "eslint \"{src,mock}/**/*.{vue}\""
	}
}
